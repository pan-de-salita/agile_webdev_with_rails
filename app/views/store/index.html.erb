<div class="w-full">
  <%= render "notice" %>

  <div class="flex justify-between mb-6 pb-2 border-b-2">
    <h1 class="font-bold text-xl">
      Your Pragmatic Catalog
    </h1>
    <% if @store_visit_count > 5 %>
      <span>You've visited this page
        <%= pluralize(@store_visit_count, "time") %>.</span>
    <% end %>
  </div>

  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <li class="flex mb-6">
            <%= image_tag(product.image_url, class: "object-contain w-40 h-48 shadow mr-6") %>
            <div>
              <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>

              <p>
                <%# sanitize allows us to safely add HTML stylings %>
                <%= sanitize(product.description) %>
              </p>

              <div class="mt-3">
                <%= number_to_currency(product.price) %>

                <%= button_to "Add to Cart",
                line_items_path(product_id: product),
                form_class: "inline",
                class: "ml-4 rounded-lg py-1 px-2 text-white bg-green-600" %>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
